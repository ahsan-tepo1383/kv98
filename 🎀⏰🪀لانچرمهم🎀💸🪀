            #!/bin/bash
# Launcher for panel20 scripts

echo "Which panel do you want to run?"
echo "1) Bash panel"
echo "2) Python panel"
read -r choice

if [ "$choice" == "1" ]; then
    if [ -f "./panel20.sh" ]; then
        bash ./panel20.sh
    else
        echo "panel20.sh not found!"
    fi
elif [ "$choice" == "2" ]; then
    if [ -f "./panel20.py" ]; then
        python3 ./panel20.py
    else
        echo "panel20.py not found!"
    fi
else
    echo "Invalid choice!"
fi
